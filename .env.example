# PumpPortal API key (Lightning)
PUMPPORTAL_API_KEY=

# Base58 secret key for the claim/distribution wallet (controls creator fees)
CLAIM_WALLET_SECRET=

# Solana RPC endpoint (mainnet recommended)
RPC_URL=https://api.mainnet-beta.solana.com

# Optional default priority fee in SOL
PRIORITY_FEE_SOL=0.00005

# Moltbook
MOLTBOOK_API_BASE=https://www.moltbook.com/api/v1
MOLTBOOK_API_KEY=
MOLTBOOK_TRIGGER=!solclawnbot
MOLTBOOK_SUBMOLT=solclawn
MOLTBOOK_BOT_NAME=solclawnbot
LAUNCH_COOLDOWN_DAYS=7
MAX_TOKEN_NAME_LEN=50
MAX_TOKEN_DESC_LEN=500
MAX_TOKEN_SYMBOL_LEN=10

# Platform fee wallet (20% share)
PLATFORM_WALLET=

# Default dev buy size in SOL for Pump.fun create
DEFAULT_DEV_BUY_SOL=0.1

# CORS + rate limit
ALLOWED_ORIGINS=https://solclawn.com,https://www.solclawn.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# Fee Router (on-chain)
FEE_ROUTER_ENABLED=false
FEE_ROUTER_PROGRAM_ID=

# Data storage
DATA_DIR=./data

PORT=4000

# Optional UI config (set in apps/web/.env.local)
NEXT_PUBLIC_API_BASE=http://localhost:4000
NEXT_PUBLIC_RPC_URL=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_PLATFORM_TOKEN_SYMBOL=
NEXT_PUBLIC_PLATFORM_TOKEN_ADDRESS=
NEXT_PUBLIC_PLATFORM_TOKEN_DEX=
NEXT_PUBLIC_PLATFORM_TOKEN_TRADE=
NEXT_PUBLIC_PLATFORM_TOKEN_EXPLORER=
